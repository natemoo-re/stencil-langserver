{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "out",
		"rootDir": "src",
		"lib": [ 
			"es2015",
			"es2016.array.include"
		],
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}